{
  "name": "roku-log",
  "version": "0.3.0",
  "description": "Simple logging library for roku.",
  "directories": {
    "doc": "docs"
  },
  "files": [
    "dist/**/!(manifest)*"
  ],
  "devDependencies": {
    "brighterscript": "^0.30.4",
    "ropm": "^0.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/georgejecook/roku-log.git"
  },
  "keywords": [
    "ropm",
    "brightscript",
    "mvvm",
    "framework",
    "fun"
  ],
  "author": "George Cook",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/georgejecook/roku-log/issues"
  },
  "homepage": "https://github.com/georgejecook/roku-log#readme",
  "ts-node": {
    "transpileOnly": true,
    "compileOptions": {
      "incremental": true,
      "allowJs": false
    }
  },
  "ropm": {
    "rootDir": "src",
    "packageRootDir": "dist",
    "prefixMatching": "expanded"
  },
  "scripts": {
    "build": "npx bsc",
    "test": "cd tests && npx ropm copy && bsc --project ./bsconfig.json"
  }
}
